{
  "name": "Novlisky",
  "builds": {
    "android": {
      "prebuild": [
        "mkdir -p client/dist",
        "npm run build:data-provider",
        "npm run build:mcp",
        "npm run build:data-schemas",
        "cd client && npm run build && cd ..",
        "find client/dist -name '*.gz' -delete 2>/dev/null || true",
        "npx cap sync android"
      ],
      "environmentVariables": {
        "NODE_ENV": "production"
      }
    },
    "ios": {
      "prebuild": [
        "mkdir -p client/dist",
        "npm run build:data-provider",
        "npm run build:mcp",
        "npm run build:data-schemas",
        "cd client && npm run build && cd ..",
        "find client/dist -name '*.gz' -delete 2>/dev/null || true",
        "npx cap sync ios"
      ],
      "environmentVariables": {
        "NODE_ENV": "production"
      }
    }
  },
  "hooks": {
    "prebuild": "echo 'Starting build process for Novlisky app'",
    "postbuild": "echo 'Build process completed successfully'"
  }
}
